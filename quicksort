#include <stdio.h>
#include <stdlib.h>
#include <time.h>

void quicksort(int number[25],int primeiro,int ultimo){

int i, j, pivot, temp;

if(primeiro<ultimo){

pivot=primeiro;

i=primeiro;

j=ultimo;

while(i<j){

while(number[i]<=number[pivot]&&i<ultimo)

i++;

while(number[j]>number[pivot])

j--;

if(i<j){

temp=number[i];

number[i]=number[j];

number[j]=temp;

}

}

temp=number[pivot];

number[pivot]=number[j];

number[j]=temp;

quicksort(number,primeiro,j-1);

quicksort(number,j+1,ultimo);

}

}



quicksort(num2,0,1000 -1);

printf("Os numeros ordenados: ");

for(i=0;i<1000;i++)return 0;


printf(" \n%d\n",num2[i]);

printf("\nA media dos valores dentro do vetor eh: %d \n",media);


}
